create database Survey ;

create table Admin (
 id  int primary key  auto_increment,
 UserName varchar (50),
 email varchar (50),
 password varchar(50) 
 
);

create table User (
 id  int primary key auto_increment ,
 UserName varchar (50),
 email varchar (50),
 password varchar(50), 
gender varchar (6) ,
suspend boolean

);


create table Survey (
 id  int primary key auto_increment ,
 description  varchar (250),
 name varchar (50),
suspend boolean,
userId int ,
FOREIGN KEY(userId) REFERENCES User(id)ON DELETE CASCADE

);


create table Question (
id  int primary key auto_increment ,
type varchar (50),
question varchar(250),
surveyId int ,
FOREIGN KEY(surveyId) REFERENCES Survey(id) ON DELETE CASCADE

);

create table Answer (
id  int primary key auto_increment ,
answer varchar(250),
questionId int ,
FOREIGN KEY(questionId) REFERENCES Question(id) ON DELETE CASCADE

);

create table UserAnswer (
id  int primary key auto_increment ,
answer varchar(250),
userNameVisibile boolean, 
questionId int ,
userId int ,
FOREIGN KEY(userId) REFERENCES User(id)ON DELETE CASCADE,
FOREIGN KEY(questionId) REFERENCES Question(id) ON DELETE CASCADE

);

create table Report (
id  int primary key auto_increment ,
report varchar (250),
surveyId int ,
userId int ,
FOREIGN KEY(userId) REFERENCES User(id)ON DELETE CASCADE,
FOREIGN KEY(surveyId) REFERENCES Survey(id) ON DELETE CASCADE

);

